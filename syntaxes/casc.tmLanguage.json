{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CASC",
	"scopeName": "source.casc",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.token",
				"match": "\\b(if|while|for|return|真|true|假|false)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.casc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.casc",
					"match": "\\\\."
				}
			]
		}
	}
}